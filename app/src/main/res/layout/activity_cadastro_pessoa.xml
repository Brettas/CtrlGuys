<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_cad_pessoa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="50dp"
        android:text="@string/Cadastro"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/corTexto"/>

    <EditText
        android:id="@+id/txt_nome_pessoa"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:textColor="@color/corTexto"
        android:inputType="text"
        android:text="@string/name"
        android:textAlignment="center"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/txt_email_pessoa"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="@string/Email"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/corTexto"
        />

    <EditText
        android:id="@+id/txt_senha_pessoa"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:ems="10"
        android:inputType="textWebPassword"
        android:text="@string/Senha_pessoa"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/corTexto"/>

    <Button
        android:id="@+id/btn_cadastrar_pessoa"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:text="@string/btnCadastrar"
        android:textColor="#FFFFFF"
        android:onClick="startinfoActivity"
        android:background="@color/colorPrimaryDark"/>

</LinearLayout>